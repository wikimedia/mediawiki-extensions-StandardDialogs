{
	"root": true,
	"extends": [
		"wikimedia/client-es5",
		"wikimedia/jquery",
		"wikimedia/mediawiki",
		"wikimedia/jsduck"
	],
	"globals": {
		"ve": "readonly",
		"VisualEditorSupportCheck": "readonly",
		"unicodeJS": "readonly",
		"RangeFix": "readonly",
		"Papa": "readonly"
	},
	"rules": {
		"no-jquery/no-deferred": "error",
		"no-jquery/no-when": "error",
		"no-jquery/no-visibility": "error",
		"mediawiki/valid-package-file-require": "warn",
		"no-undef": "warn"
	}
}