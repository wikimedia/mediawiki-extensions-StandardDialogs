{
	"root": true,
	"extends": [
		"wikimedia/client",
		"wikimedia/jquery",
		"wikimedia/mediawiki"
	],
	"globals": {
		"OOJSPlus": "readonly",
		"ve": "readonly",
		"VisualEditorSupportCheck": "readonly",
		"unicodeJS": "readonly",
		"RangeFix": "readonly",
		"Papa": "readonly",
		"StandardDialogs": "writable"
	},
	"rules": {
		"es-x/no-object-values": "off",
		"max-len": "off",
		"no-jquery/no-class-state": "off",
		"no-jquery/no-global-selector": "off",
		"no-jquery/variable-pattern": "off",
		"no-jquery/no-done-fail": "warn"
	}
}
